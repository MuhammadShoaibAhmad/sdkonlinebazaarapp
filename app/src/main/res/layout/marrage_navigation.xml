<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/module_navigation"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/_100sdp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linr1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_45sdp"

        android:background="@android:color/white"
        android:weightSum="2.0">

        <Button
            android:id="@+id/muslim_button"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1.0"
            android:adjustViewBounds="true"
            android:background="@color/black"
            android:onClick="gotoMuslimActivity"
            android:text="Muslim"
            android:textColor="@color/white" />






        <Button
            android:id="@+id/christian_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:onClick="gotoChristianActivity"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_weight="1.0"
            android:text="Christian"
            android:textColor="@color/white"
            android:background="@color/black"
            android:adjustViewBounds="true"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linr2"
        android:layout_below="@+id/linr1"
        android:layout_width="fill_parent"
        android:paddingTop="@dimen/_5sdp"
        android:layout_height="@dimen/_45sdp"
        android:background="@android:color/white"
        android:weightSum="3.0">

        <Button
            android:id="@+id/hindu_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:onClick="gotoHinduActivity"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1.0"
            android:text="Hindu"
            android:textColor="@color/white"
            android:background="@color/black"
            android:adjustViewBounds="true"
            />






        <Button
            android:id="@+id/sikh_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:onClick="gotoSikhActivity"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1.0"
            android:text="Sikh"
            android:textColor="@color/white"
            android:background="@color/black"
            android:adjustViewBounds="true"
            />
        <Button
            android:id="@+id/buddhist_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:onClick="gotoBuddhistActivity"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_weight="1.0"
            android:text="Buddhist"
            android:textColor="@color/white"
            android:background="@color/black"
            android:adjustViewBounds="true"
            />

    </LinearLayout>




</RelativeLayout>