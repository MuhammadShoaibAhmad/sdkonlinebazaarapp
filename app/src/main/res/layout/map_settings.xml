<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScrollView_container"
    android:layout_width="fill_parent"
    android:layout_height="250.0dip"
    android:background="@color/whiteDark"
    android:clipToPadding="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="#ffe1dfdf" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_margin="10.0dip"
                android:text="map_types"
                android:textColor="@color/greyDark"
                android:textSize="20.0sp" />

            <ImageView
                android:id="@+id/imageView_hide_map_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5.0dip"
                android:onClick="hidePersionnavigation"
                android:padding="5.0dip"
                android:src="@drawable/ic_keyboard_arrow_down_black_24px"
                app:tint="@color/greyDark" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="4.0">

            <RelativeLayout
                android:id="@+id/relativeLayout_map_type_normal_container"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/imageView_map_type_normal"
                    style="@style/MapControlButton"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="0.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:background="@drawable/circle_white_with_color_primary_border"
                    android:onClick="ChangeType"
                    android:src="@drawable/ic_map_black_24px"
                    app:tint="@color/primary" />

                <TextView
                    android:id="@+id/textView_map_type_normal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView_map_type_normal"
                    android:gravity="center_horizontal"
                    android:text="normal"
                    android:textColor="@color/primary" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_map_type_hybrid_container"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/imageView_map_type_hybrid"
                    style="@style/MapControlButton"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="0.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:onClick="ChangeType"
                    android:src="@drawable/ic_layers_black_24px" />

                <TextView
                    android:id="@+id/textView_map_type_hybrid"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView_map_type_hybrid"
                    android:gravity="center_horizontal"
                    android:text="hybrid"
                    android:textColor="@color/grey2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_map_type_satellite_container"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/imageView_map_type_satellite"
                    style="@style/MapControlButton"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="0.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:onClick="ChangeType"
                    android:src="@drawable/ic_satellite_black_24px" />

                <TextView
                    android:id="@+id/textView_map_type_satellite"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView_map_type_satellite"
                    android:gravity="center_horizontal"
                    android:text="satellite"
                    android:textColor="@color/grey2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_map_type_terrain_container"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/imageView_map_type_terrain"
                    style="@style/MapControlButton"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="0.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:onClick="ChangeType"
                    android:src="@drawable/ic_terrain_black_24px" />

                <TextView
                    android:id="@+id/textView_map_type_terrain"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView_map_type_terrain"
                    android:gravity="center_horizontal"
                    android:text="terrain"
                    android:textColor="@color/grey2" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:text="utilities"
            android:textColor="@color/greyDark"
            android:textSize="20.0sp" />

        <RelativeLayout
            android:id="@+id/relativeLayout_clustering_enabled_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="5.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5.0dip"
                android:text="enable_clustering" />

            <com.bazaar.sdkonlinebazaar.ui.activities.TintableSwitch
                android:id="@+id/tintableSwitch_enable_auto_zoom1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"

                android:background="@color/separator_color" />
          <!--  android:layout_below="@+id/tintableSwitch_enable_clustering"-->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_show_device_sensors_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="5.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5.0dip"
                android:text="show_device_sensors" />

            <com.bazaar.sdkonlinebazaar.ui.activities.TintableSwitch
                android:id="@+id/tintableSwitch_enable_auto_zoom2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"

                android:layout_alignParentBottom="true"
                android:background="@color/separator_color" />
        <!--    android:layout_below="@+id/tintableSwitch_show_device_sensors"-->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_show_tails_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="5.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5.0dip"
                android:text="show_tails" />

            <com.bazaar.sdkonlinebazaar.ui.activities.TintableSwitch
                android:id="@+id/tintableSwitch_enable_auto_zoom3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/separator_color" />

        <RelativeLayout
            android:id="@+id/relativeLayout_show_geofences_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="5.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5.0dip"
                android:text="show_geofences" />

            <com.bazaar.sdkonlinebazaar.ui.activities.TintableSwitch
                android:id="@+id/tintableSwitch_enable_auto_zoom4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/separator_color" />

        <RelativeLayout
            android:id="@+id/relativeLayout_show_my_location_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="5.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5.0dip"
                android:text="show_my_location" />

            <com.bazaar.sdkonlinebazaar.ui.activities.TintableSwitch
                android:id="@+id/tintableSwitch_enable_auto_zoom5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@color/separator_color" />

        <RelativeLayout
            android:id="@+id/relativeLayout_enable_auto_zoom_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="5.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5.0dip"
                android:text="enabled_auto_zoom" />

            <com.bazaar.sdkonlinebazaar.ui.activities.TintableSwitch
                android:id="@+id/tintableSwitch_enable_auto_zoom6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>